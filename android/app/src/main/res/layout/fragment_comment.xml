<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        tools:context=".component.CommentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <TextView
                android:id="@+id/create_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/create_date"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="end|center_vertical"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/create_user_name"
                app:layout_constraintEnd_toEndOf="@+id/content"
                app:layout_constraintTop_toTopOf="@+id/create_user_name"
                app:layout_constraintBottom_toBottomOf="@+id/create_user_name"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/content"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/create_user_name" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>