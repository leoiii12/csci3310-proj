<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SightDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here will be the image." />

            <!-- Ratings -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The following is the ratings." />
            <LinearLayout
                android:id="@+id/rating_fragment_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Comments -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The following is the comments." />
            <LinearLayout
                android:id="@+id/comment_fragment_container"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>



</FrameLayout>